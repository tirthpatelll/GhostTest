<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/user_profile_background"
        android:alpha="1"/>

    <!-- Title -->
    <TextView
        android:id="@+id/tv_settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="User Settings"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_background"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Username Section -->
    <TextView
        android:id="@+id/tv_username_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded_background"
        android:padding="12dp"
        android:text="Username:"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_settings_title"/>

    <TextView
        android:id="@+id/username_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JohnDoe"
        android:textSize="16sp"
        android:paddingTop="4dp"
        app:layout_constraintStart_toStartOf="@id/tv_username_label"
        app:layout_constraintTop_toBottomOf="@id/tv_username_label"/>

    <!-- Level Section -->
    <TextView
        android:id="@+id/tv_level_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_background"
        android:padding="12dp"
        android:text="Level:"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username_value"/>

    <TextView
        android:id="@+id/tv_level_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="16sp"
        android:paddingTop="4dp"
        app:layout_constraintStart_toStartOf="@id/tv_level_label"
        app:layout_constraintTop_toBottomOf="@id/tv_level_label"/>

    <!-- Total XP Section -->
    <TextView
        android:id="@+id/tv_xp_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_background"
        android:padding="12dp"
        android:text="Total XP:"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_level_value"/>

    <TextView
        android:id="@+id/tv_xp_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1200"
        android:textSize="16sp"
        android:paddingTop="4dp"
        app:layout_constraintStart_toStartOf="@id/tv_xp_label"
        app:layout_constraintTop_toBottomOf="@id/tv_xp_label"/>

    <!-- Back Button -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/rounded_button"
        android:padding="12dp"
        android:text="Back"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_xp_value" />

    <!-- In-Game Level Section -->
    <TextView
        android:id="@+id/in_game_level_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In-Game Level:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_xp_value"/>

    <TextView
        android:id="@+id/in_game_level_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="16sp"
        android:paddingTop="4dp"
        app:layout_constraintStart_toStartOf="@id/in_game_level_label"
        app:layout_constraintTop_toBottomOf="@id/in_game_level_label"/>

</androidx.constraintlayout.widget.ConstraintLayout>